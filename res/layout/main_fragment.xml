<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/Nav"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <!--TODO: CHANGE THIS WHEN WE HAVE PASSANGERS/DRIVERS FUNCTIONALITY-->
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driver"
            android:background="@drawable/buttons"
            android:text="@string/main_menu_drivers"
            android:drawableStart="@drawable/rightcar"
            android:textSize="20sp"
            android:drawablePadding="210dp"
            android:layout_marginTop="50dp"
            android:paddingTop="22dp"
            android:paddingBottom="22dp"
            />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/passanger"
            android:background="@drawable/buttons"
            android:text="@string/main_menu_passangers"
            android:textSize="20sp"
            android:drawableStart="@drawable/man"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/driver"
            android:drawablePadding="165dp"
            
            />
</RelativeLayout>